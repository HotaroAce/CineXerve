datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id          Int        @id @default(autoincrement())
  title       String
  genre       String?
  duration    Int?
  description String?
  showtimes   Showtime[]
}

model Showtime {
  id       Int       @id @default(autoincrement())
  movieId  Int
  datetime DateTime
  cinema   String
  movie    Movie     @relation(fields: [movieId], references: [id])
  seats    Seat[]
  bookings Booking[]
}

model Seat {
  id         Int      @id @default(autoincrement())
  showtimeId Int
  seatNumber String
  status     String
  showtime   Showtime @relation(fields: [showtimeId], references: [id])

  @@unique([showtimeId, seatNumber])
}

model Booking {
  id         Int      @id @default(autoincrement())
  userName   String
  showtimeId Int
  seatNumber String
  createdAt  DateTime @default(now())
  showtime   Showtime @relation(fields: [showtimeId], references: [id])
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
}
